##############################################
# LingoView environment configuration (example)
# Copy to `.env` and fill in your own values.
##############################################

# Backend selection: local (faster-whisper) or openai (Whisper API)
WHISPER_BACKEND=local

# OpenAI（翻译使用 OpenAI 提供者）
OPENAI_API_KEY=sk-...your-openai-key...
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_TRANSLATE_MODEL=gpt-4.1-mini

# 以下为历史遗留的可选翻译提供者，已弃用（不再维护），请勿依赖：
# GROK_API_KEY=xai-... (deprecated)
# GROK_MODEL=grok-4-latest (deprecated)
# DEEPSEEK_API_KEY=sk-... (deprecated)

# Storage and cache directory
LINGOVIEW_STORAGE_DIR="$HOME/Library/Application Support/LingoView/cache"

# Whisper local model and thresholds
WHISPER_MODEL=large-v2
WHISPER_NO_SPEECH_THRESHOLD=0.4
WHISPER_LOG_PROB_THRESHOLD=-0.5
WHISPER_COMPRESSION_RATIO_THRESHOLD=2.0
WHISPER_CONDITION_ON_PREVIOUS_TEXT=true
WHISPER_CHUNK_SECONDS=120
WHISPER_CHUNK_OVERLAP=0.0
WHISPER_COMPUTE_TYPE=float32
WHISPER_TEMPERATURE=0.2

# Voice Activity Detection (VAD)
ENABLE_VAD=false

# 翻译提供者固定为 OpenAI；无需设置 TRANSLATOR_PROVIDER

# MeCab dictionary
MECAB_DICTIONARY_PATH=/opt/homebrew/lib/mecab/dic/mecab-ipadic-neologd
MECABRC=/opt/homebrew/etc/mecabrc
